<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_H"
    tools:context=".addShop">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Shop Name"
        android:icon="@drawable/add_shops"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resortNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/add_shops"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Contact Info"
        android:icon="@drawable/add_shops"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contactInfoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            android:textColorLink="@color/white"
            android:icon="@drawable/add_shops"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textInputLayout2"
        android:layout_marginLeft="15dp"
        app:hintTextColor="@color/white"
        android:hint="Latitude"
        android:icon="@drawable/add_shops"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/latitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/add_shops"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            app:hintTextColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayou4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textInputLayout2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="225dp"
        app:hintTextColor="@color/white"
        android:hint="Longitude"
        android:icon="@drawable/add_shops"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/longitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/add_shops"
            android:inputType="numberSigned"
            app:hintTextColor="@color/white"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textInputLayou4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="About Info..."
        app:hintTextColor="@color/white"
        android:icon="@drawable/add_shops"
        android:textColorHint="@color/white"
        app:boxStrokeColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/multilineTextInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            app:hintTextColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink=
                "@color/white"
            android:icon="@drawable/add_shops"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/resort_button"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textInputLayout5"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"

        android:backgroundTint="@color/yellow_H"

        android:onClick="addResort"
        android:text="Add Shop"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back_to_resort_activity"
        android:layout_width="200dp"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/resort_button"

        android:backgroundTint="@color/yellow_H"


        android:onClick="backToResortActivity"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>